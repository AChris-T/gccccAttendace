{
  "compilerOptions": {
    "jsx": "react",
    "composite": true,
    "module": "ESNext",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": [
    "src/**/*",
    "vite.config.js",
    "src/components/admin/attendance/AdminAttendanceTable.jsx"
  ],
  "exclude": ["node_modules"]
}
